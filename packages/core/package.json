{
  "name": "@dungeon-crawler/core",
  "version": "0.1.0",
  "description": "Core utilities for the dungeon crawler.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Matt Bengston <bengsfort@gmail.com>",
  "repository": "git@github.com:bengsfort/dungeon-crawler.git",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "start": "tsc -w -d --preserveWatchOutput",
    "build:module": "tsc --module esnext -b",
    "build:cjs": "tsc --module commonjs -b",
    "build": "yarn build:module && yarn build:cjs",
    "clean": "rimraf {dist,tsconfig.tsbuildinfo}"
  }
}
