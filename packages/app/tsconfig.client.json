{
  "include": ["./src/client/**/*", "./src/client/**/*.json"],
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src/client",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@dungeon-crawler/core": ["../core"],
      "@dungeon-crawler/renderer": ["../renderer"],
      "@dungeon-crawler/runtime": ["../runtime"]
    },
    "resolveJsonModule": true
  },
  "references": [
    { "path": "../core" },
    { "path": "../renderer" },
    { "path": "../runtime" }
  ]
}
